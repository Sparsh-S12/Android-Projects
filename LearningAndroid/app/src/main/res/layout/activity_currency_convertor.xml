<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrencyConvertor"
    android:background="#7AF8FF">
<ImageView
    android:id="@+id/Currency_convertor"
    android:layout_width="350dp"
    android:layout_marginTop="32dp"
    app:layout_constraintTop_toTopOf="parent"
    android:textColor="@color/black"
    android:src="@drawable/cooltext415391078836803"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:textSize="20sp"
    app:layout_constraintVertical_bias="0.2"
    android:textAlignment="center"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/edt_dollar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Enter Dollar"
        app:layout_constraintTop_toBottomOf="@id/Currency_convertor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/btn_convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/edt_dollar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Convert"
        android:textSize="20dp"
        android:textColor="#13ffff"
        android:backgroundTint="#ffb3ba"

        />
<TextView
    android:id="@+id/display_result"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btn_convert"
    android:text=""
    android:shadowColor="#a8a8f8"
    android:shadowDx="12"
    android:shadowDy="12"
    android:shadowRadius="8"
    android:gravity="center"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="32dp"
    android:textColor="#F5A623"
    android:textAlignment="center"
    android:textSize="30dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>